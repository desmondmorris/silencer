{
  "manifest_version": 2,

  "name": "Silencer",
  "description": "A conscious way to filter the Internet",
  "version": "0.25",
  "background":{
    "scripts":["background.js"]
  },
  
  "content_scripts": [
    {
      // http://developer.chrome.com/extensions/match_patterns.html
      // Consider changing this to matches: * (everything), so terms show up on all page
      "matches": ["https://twitter.com/*"],
      "js": ["jquery-1.9.1.min.js", "silencer.js"],
      "all_frames": true
    }
  ], 
  "browser_action": {
    "default_icon": "/icons/icon-mini.png",
    "default_popup": "popup.html"
  }
}