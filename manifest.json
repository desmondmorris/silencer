{
  "manifest_version": 2,

  "name": "Silencer",
  "description": "Silencer is the easiest way to mute spoilers, people, hashtags, terms and phrases on Twitter and Facebook.",
  "version": "0.66",

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://www.facebook.com/*"],
      "js": ["/lib/jquery-1.9.1.min.js", "/lib/mixpanel.js", "/src/silencer.js"],
      "all_frames": true
    }
  ], 
  "browser_action": {
    "default_icon": "/icons/icon-mini.png",
    "default_popup": "/src/popup.html"
  },
  "permissions": ["https://*.twitter.com/*", "https://www.facebook.com/*"],
  "content_security_policy": "script-src 'self' https://cdn.mxpnl.com; object-src 'self'"
}